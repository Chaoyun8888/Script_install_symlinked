# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Shortcuts
alias d="cd ~/Documents/Dropbox"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/projects"
alias g="git"
alias h="history"
alias j="jobs"

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color=auto"
else # OS X `ls`
	colorflag="-G"
fi

# displays a directory tree
alias tree='tree -Csu'

# use colors for grep
alias grep='grep --color=auto'

# optimize "ls"-command
if [ "$TERM" != "dumb" ]; then
  eval "`dircolors -b`"
  # list all files colorized in long format
  alias l="ls -lF ${colorflag}"
  # use colors
  alias ls="ls -Fh ${colorflag}"
  # displays all files and directories in detail
  alias la="ls -laFh ${colorflag}"
  # displays files and directories in detail
  alias ll="ls -lFh ${colorflag} --group-directories-first"
  # shows the most recently modified files at the bottom of
  alias llr="ls -lartFh ${colorflag} --group-directories-first"
  # list only directories
  alias lsd="ls -lFh ${colorflag} | grep --color=never '^d'"
  # displays files and directories
  alias dir="ls ${colorflag} --format=vertical"
  # displays more information about files and directories
  alias vdir="ls ${colorflag} --format=long"
fi

