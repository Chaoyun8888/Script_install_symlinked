#!/bin/sh

# INSTALL
#
# https://github.com/Microsoft/Git-Credential-Manager-for-Windows/

# -------------------------------------------------------------------
# Helper function for "git credential"
__git_credential_helper()
{
  if [[ $SYSTEM_TYPE == "OSX" ]]; then
    # Do something under Mac OS X platform
    echo ""
  elif [[ $SYSTEM_TYPE == "LINUX" ]]; then
    # Do something under Linux platform
    echo ""
  elif [[ $SYSTEM_TYPE == "CYGWIN" ]]; then
    cygpath "C:\\Users\\$USERNAME\\AppData\\Roaming\\GitCredStore\\git-credential-winstore.exe"
  elif [[ $SYSTEM_TYPE == "MINGW" ]]; then
    echo "/c/Users/$USERNAME/AppData/Roaming/GitCredStore/git-credential-winstore.exe"
  fi
}

